{
  "migrations": {
    "autoRun": true,
    "backupEnabled": true,
    "timeout": 300000,
    "dryRun": false,
    "validateOnly": false,
    "requireConfirmation": false,
    "migrationsPath": "./migrations",
    "collectionName": "migrations"
  },
  "deployment": {
    "environment": "staging",
    "healthCheckTimeout": 60000,
    "healthCheckRetries": 10,
    "healthCheckInterval": 10000,
    "stabilizationTime": 30000
  },
  "database": {
    "connectionTimeout": 30000,
    "queryTimeout": 15000,
    "retries": 5
  },
  "backup": {
    "enabled": true,
    "retentionDays": 7,
    "compression": true,
    "verifyIntegrity": true
  },
  "rollback": {
    "autoRollback": true,
    "rollbackOnMigrationFailure": true,
    "rollbackOnHealthCheckFailure": true
  },
  "monitoring": {
    "enabled": true,
    "alertsEnabled": true,
    "metricsEnabled": true,
    "notificationChannels": ["slack", "email"]
  },
  "performance": {
    "maxConnectionTime": 5000,
    "maxQueryTime": 2000,
    "warningThresholds": {
      "connectionTime": 2000,
      "queryTime": 1000
    }
  }
}