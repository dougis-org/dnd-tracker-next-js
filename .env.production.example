# Production Environment Configuration
# Copy this file to .env.production and configure values for production deployment

# Environment
NODE_ENV=production

# Application Configuration
NEXTAUTH_URL=https://dndtracker.com
NEXTAUTH_SECRET=generate-highly-secure-32-char-secret-for-production

# Database Configuration
MONGODB_URI=mongodb+srv://prod-user:highly-secure-prod-password@prod-cluster.mongodb.net/?retryWrites=true&w=majority&appName=dnd-prod-cluster
MONGODB_DB_NAME=dnd-tracker-prod

# Email Configuration (Production Email Service)
EMAIL_SERVER_HOST=smtp.sendgrid.net
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=apikey
EMAIL_SERVER_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@dndtracker.com

# OAuth Providers (Production)
# GITHUB_ID=your-github-prod-client-id
# GITHUB_SECRET=your-github-prod-client-secret
# GOOGLE_ID=your-google-prod-client-id
# GOOGLE_SECRET=your-google-prod-client-secret

# Optional: Stripe (for subscriptions)
# STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Monitoring and Analytics
# SENTRY_DSN=your-production-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga4-measurement-id
# VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true

# Development Tools (disabled in production)
ANALYZE=false